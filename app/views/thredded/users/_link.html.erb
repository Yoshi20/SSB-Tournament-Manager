<% if user %>
  <% if !user.thredded_anonymous? %>
    <% user_path = user_path(user) %>
    <% if user_path.blank? %>
<span class='thredded--username'><a target="_blank" href="<%= request.url.gsub(request.path, "/players/#{user.player.id.to_s}") %>"><%= user.thredded_display_name %></a></span>
    <% else %>
<a href="<%= user_path %>"><%= user.thredded_display_name %></a>
    <% end %>
  <% else %>
<%= user.thredded_display_name %>
  <% end %>
<% else %>
<em><%= t 'thredded.null_user_name' %></em>
<% end %>
