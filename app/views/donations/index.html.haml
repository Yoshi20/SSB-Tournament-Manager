- set_meta_tags description: meta_tag_description('Donations')

.row
  .col
    %h1.page__title= t('donations.title')

.row
  - if @donations.any?
    - @donations.each_with_index do |donation, i|
      .col-6.col-lg-4
        = render donation, index: i, truncate: false
  - else
    .col
      %p= t('welcome.no_donations_yet')
