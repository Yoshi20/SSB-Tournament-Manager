%tr{'data-id': feedback.id, 'data-component': 'feedback'}
  %td{style: 'vertical-align: top;'}
    - if feedback.user.present?
      = feedback.user.username
    - else
      = '?'

  %td
    = feedback.text
    - if !feedback.response.nil? and !feedback.response.blank?
      %br
      %br
      %i= t('feedback.admin_replied', user: feedback.response_username).html_safe
      %br
      .a_tab{style: 'margin-left: 10px;'}
        %i= feedback.response
