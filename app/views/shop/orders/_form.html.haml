= form_for @shop_order, role: 'form', class:'form' do |f|

  - if @shop_order.errors.any?
    #error_explanation
      -# %h2= pluralize(@shop_order.errors.count, "error") + ' ' + t('orders.prohibited')
      %ul
        - @shop_order.errors.full_messages.each do |message|
          %li= message

  .field.form-group
    = f.label :organisation, t('activerecord.attributes.shop_order.organisation')
    = f.text_field :organisation, class: 'form-control', disabled: @shop_order.was_order_sent
  .field.form-group
    = f.label :name, t('activerecord.attributes.shop_order.name')
    = f.text_field :name, class: 'form-control', disabled: @shop_order.was_order_sent
  .field.form-group
    = f.label :address, t('activerecord.attributes.shop_order.address')
    = f.text_field :address, class: 'form-control', disabled: @shop_order.was_order_sent
  .field.form-group
    = f.label :address2, t('activerecord.attributes.shop_order.address2')
    = f.text_field :address2, class: 'form-control', disabled: @shop_order.was_order_sent
  .row
    .col
      .field.form-group
        = f.label :zip_code, t('activerecord.attributes.shop_order.zip_code')
        = f.text_field :zip_code, class: 'form-control', disabled: @shop_order.was_order_sent
    .col
      .field.form-group
        = f.label :city, t('activerecord.attributes.shop_order.city')
        = f.text_field :city, class: 'form-control', disabled: @shop_order.was_order_sent
  .field.form-group
    = f.label :phone_number, t('activerecord.attributes.shop_order.phone_number')
    = f.text_field :phone_number, class: 'form-control', disabled: @shop_order.was_order_sent

  .field.form-group
    = f.label :email, t('activerecord.attributes.shop_order.email') + '*'
    = f.text_field :email, class: 'form-control', disabled: !@shop_order.new_record?

