- if controller_name != 'sessions'
  = link_to t('devise.shared.log_in'), new_session_path(resource_name), class:'btn btn-success'
  %br

- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('devise.shared.sign_up'), new_registration_path(resource_name), class:'btn btn-primary'
  %br

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to t('devise.shared.forgot_pw'), new_password_path(resource_name), class:'btn btn-warning'
  %br

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('devise.shared.no_conf_inst'), new_confirmation_path(resource_name)
  %br

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('devise.shared.no_unlock_inst'), new_unlock_path(resource_name)
  %br

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "#{t('devise.shared.log_in_with')} #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class:'btn btn-success'
    %br
