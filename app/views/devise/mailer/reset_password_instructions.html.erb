<%- locale = @resource.country_code == 'ch' ? 'en' : @resource.country_code %>

<p><%= t('devise.mailer.hello', locale: locale)%> <%= @resource.username %></p>

<p><%= t('devise.mailer.change_pw_request', locale: locale)%></p>

<p><%= link_to t('devise.mailer.change_my_pw', locale: locale), edit_password_url(@resource, reset_password_token: @token) %></p>

<p><%= t('devise.mailer.change_pw_ignore', locale: locale)%></p>
<p><%= t('devise.mailer.pw_wont_change', locale: locale)%></p>
