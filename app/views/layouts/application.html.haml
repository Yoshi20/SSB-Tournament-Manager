!!!
%html

  %head
    - if session['country_code'] == 'ch'
      %title= "SwissSmash.ch#{@section.present? ? " | #{@section.capitalize}" : ""}"
    - elsif session['country_code'] == 'de'
      %title= "GermanySmash.de#{@section.present? ? " | #{@section.capitalize}" : ""}"
    - elsif session['country_code'] == 'fr'
      %title= "SmashUltimate.fr#{@section.present? ? " | #{@section.capitalize}" : ""}"
    = display_meta_tags(default_meta_tags)
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}
    - if session['country_code'] == 'ch'
      = favicon_link_tag 'favicon.ico'
    - elsif session['country_code'] == 'de'
      = favicon_link_tag 'de_logo.png'
    - elsif session['country_code'] == 'fr'
      = favicon_link_tag 'fr_favicon-32x32.png'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = render '/layouts/google_analytics'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    = render '/layouts/flashes'
    = render '/partials/login'
    %main
      .header.navbar.navbar-expand-lg.navbar-sstm
        = render "/layouts/navigation_#{session['country_code']}"
      .banner
        .banner__overlay
        = image_tag 'banner.jpg', class: 'banner__image'
      .container
        .row
          - if request.original_fullpath.start_with?('/calendar')
            .col-12
              .content
                = yield
          - else
            .d-none.d-lg-block.col-lg-3
              .sidebar
                = render '/partials/players'
            .col-12.col-lg-6
              .content
                = yield
              - if request.path == '/' || request.path == '/welcome'
                .content{style: 'margin-top: 10px;'}
                  %h3 Top donators
                  .row
                    - if @donations.any?
                      - @donations.each_with_index do |donation, i|
                        .col-6.col-lg-4
                          = render donation, index: i, truncate: true
                    - else
                      .col
                        %p= t('welcome.no_donations_yet')
                  - if @donations.any? && Donation.count > 6
                    .row.text-center
                      .col
                        = link_to t('welcome.all_donations'), donations_path, class:'btn btn-sstm'
            .d-none.d-lg-block.col-lg-3
              .sidebar
                = render '/partials/events'
    .footer
      .container
        .row.footer-nav
          .col-5
            .row
              .col
                %p.small
                  = link_to t('feedback_and_questions'), :feedbacks
              .col
                %p.small
                  = link_to t('navigation.footer.administrators_short'), :administrators
              .col
                %p.small
                  -# = mail_to 'admin@swisssmash.ch', t('navigation.footer.contact'), subject: t('navigation.footer.mail_subject'), body: t('navigation.footer.mail_body')
                  = link_to t('navigation.footer.contact'), informations_path(anchor: 'contact')
          .col-2
            = button_tag '', title: 'Go to top', style: 'background-color: #222; border: none;', class: 'scroll-top' do
              = image_tag('logo.png', class: 'swisssmash_logo', height: '50px', width: '50px')
          .col-5
            .row
              .col
                %p.small
                  = link_to t('navigation.footer.imprint'), :imprint
              .col
                %p.small
                  = link_to t('navigation.footer.privacy_policy'), :privacy_policy
              .col
                %p#donate-btn
                  = link_to("https://ko-fi.com/swisssmash", target: '_blank', class: "btn btn-sstm") do
                    = image_tag("https://storage.ko-fi.com/cdn/cup-border.png")
                    %span= t('please_donate')

:javascript
  I18n.defaultLocale = "#{I18n.default_locale}";
  I18n.locale = "#{I18n.locale}";
